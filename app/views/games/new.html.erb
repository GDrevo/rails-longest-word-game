<h1>New game</h1>

<div class="letters-grid">
  <% @letters.each do |letter| %>
    <div class="letter">
      <%= letter %>
    </div>
  <% end %>
</div>

<div class="form">
  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <label for="word">What is the longest word you can find?</label>
    <br>
    <input id="input-bar" type="text" name="word">
    <input id="play-button" type="submit" value="Play">
  </form>
</div>
